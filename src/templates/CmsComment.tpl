
<article class="box">
    <div class="content">
        <p class="subtitle" >name: [ name ]</p>
        <p class="subtitle">email: [ email ]</p>
        <p class="subtitle mt-5 notification [ infoClass ]">[ text ]</p>
        <input type="hidden" name="id" id="b[ hCommentId ]h" value="[ hCommentId ]">
        <button class="button is-flex" type="button" id="b[ hCommentId ]" onclick="togleComment(this.id)">[ buttonText ]</button>
    </div>
</article>
